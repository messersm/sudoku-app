<Field>:
    canvas.before:
        # background rect
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.width, self.height
            pos: self.pos

        # highlight rect
        Color:
            rgba: self.highlight_color
        Rectangle:
            size: self.width, self.height
            pos: self.pos

        # bottom border
        Color:
            rgba: self.bottom_border_color
        Line:
            width: self.bottom_border_width
            points: self.x, self.y, self.x + self.width, self.y

        # top border
        Color:
            rgba: self.top_border_color
        Line:
            width: self.top_border_width
            points: self.x, self.y + self.height, self.x + self.width, self.y + self.height

        # left border
        Color:
            rgba: self.left_border_color
        Line:
            width: self.left_border_width
            points: self.x, self.y, self.x, self.y + self.height

        # right border
        Color:
            rgba: self.right_border_color
        Line:
            width: self.right_border_width
            points: self.x + self.width, self.y, self.x + self.width, self.y + self.height

    halign: "center"
    valign: "middle"
    color: 0, 0, 0, 1
    font_size: "27sp"

<SudokuWidget>:
    orientation: "vertical"
    grid: grid
    info_label: info_label

    # Menu row
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.05

        Label:
            size_hint: (0.8, 1)
            halign: 'left' # is ignored
            text: "Sudoku"

        # Settings button
        Button:
            # size_hint: (0.2, 1)
            text: "Kivy\nSettings"
            halign: "center"
            on_press: app.open_settings()

        # Help Dropdown:
        BoxLayout:
            size_hint: (0.2, 1)
        
            Button:
                id: help_button
                # size_hint: (0.2, 1)
                text: "Help"
                on_release: help_dropdown.open(self)
                size_hint_y: None
                height: self.parent.height

            DropDown:
                id: help_dropdown
                on_parent: self.dismiss()

                Button:
                    font_size: "9sp"
                    text: "* 2 3\n4 5 6\n7 8 9"
                    size_hint_y: None
                    height: help_button.height
                    on_release: grid.auto_candidates(), help_dropdown.select(self)

                Button:
                    text: "Solve\nfield"
                    size_hint_y: None
                    height: help_button.height
                    on_release: grid.solve_field(), help_dropdown.select(self)

                Button:
                    text: "Solve\nall"
                    size_hint_y: None
                    height: help_button.height
                    on_release: grid.solve(), help_dropdown.select(self)

        BoxLayout:
            size_hint_x: 0.2

            Button:
                id: menu_button
                text: "Menu"
                on_release: menu_dropdown.open(self)
                size_hint_y: None
                height: self.parent.height

            DropDown:
                id: menu_dropdown
                on_parent: self.dismiss()

                Button:
                    text: "Clear"
                    size_hint_y: None
                    height: menu_button.height
                    on_release: grid.clear(), menu_dropdown.select(self)

                Button:
                    text: "New"
                    size_hint_y: None
                    height: menu_button.height
                    on_release: grid.new_sudoku(), menu_dropdown.select(self)

                Button:
                    text: "Custom"
                    size_hint_y: None
                    height: menu_button.height
                    on_release: grid.edit_custom_sudoku(), menu_dropdown.select(self)

    # SudokuContainer
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.9

        # padding
        Padding

        SudokuGrid:
            id: grid
            id_label: info_label
            pos: self.parent.pos
            size_hint: (None, None)
            width: min(self.parent.size)
            height: min(self.parent.size)

        # more padding
        Padding

    # Slider:
        # min: -1
        # max: 0
        # value: 0
        # step: 1
        # size_hint: (1, 0.2)

    NumberInput:
        size_hint_y: 0.1
        grid: grid

    Label:
        size_hint_y: 0.05
        id: info_label
        # text: "Hint: double tap a field to edit candidates."

<Padding@Widget>:
    canvas:
        Color:
            # light grey
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            size: self.size
            pos: self.pos

<NumberButton@Button>:
    size_hint: (1.0 / len(self.parent.children), 1)
    on_release: self.parent.grid.enter_number(int(self.text))

<NumberInput@BoxLayout>:
    orientation: "horizontal"
    size_hint: (1, 0.2)

    NumberButton:
        text: "1"
    NumberButton:
        text: "2"
    NumberButton:
        text: "3"
    NumberButton:
        text: "4"
    NumberButton:
        text: "5"
    NumberButton:
        text: "6"
    NumberButton:
        text: "7"
    NumberButton:
        text: "8"
    NumberButton:
        text: "9"
    Button:
        text: "DEL" # TODO make backspace symbol work
        size_hint_x: 1.0 / len(self.parent.children)
        on_release: self.parent.grid.enter_number(0)