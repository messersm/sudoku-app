<NumberField>:
    canvas.before:
        Color:
            rgba: self.bgcolor
        Rectangle:
            size: self.width, self.height
            pos: self.pos
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)

    halign: "center"
    valign: "center"
    color: 0, 0, 0, 1
    font_size: "27sp"

<SudokuGrid>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.width, self.height
            pos: self.pos

    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1.5
            rectangle: (self.x, self.y, self.width, self.height)
        Line:
            width: 1.5
            rectangle: (self.x, self.y + self.height / 3, self.width, self.height / 3)
        Line:
            width: 1.5
            rectangle: (self.x + self.width / 3, self.y, self.width / 3, self.height)

<SudokuWidget>:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"


        Widget:
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
        SudokuGrid:
            id: grid
            size_hint: (None, 1)
            width: self.height
        Widget:
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

#    Slider:
#        min: -1
#        max: 0
#        value: 0
#        step: 1
#
#        value_track: True
#        # value_track_color: 1, 0, 0, 1
#
#        size_hint_y: 0.2

    GridLayout:
        rows: 3

        Button:
            text: "1"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "2"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "3"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "_"
            on_press: grid.enter_number(None)
        Button:
            text: "4"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "5"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "6"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "_ 2 3\n4 5 6\n7 8 9"
        Button:
            text: "7"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "8"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "9"
            on_press: grid.enter_number(int(self.text))
        Button:
            text: "* 2 3\n4 5 6\n7 8 9"
            on_press: grid.auto_candidates()