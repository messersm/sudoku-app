<GameScreen>:
    name: "game"
    id: gamescreen

    BoxLayout:
        orientation: "vertical"
        grid: grid

        # Menu row
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "50sp"

            Label:
                size_hint: (0.8, 1)
                halign: 'left' # is ignored
                text: "Sudoku"

            # Check
            Button:
                size_hint_x: 0.2
                text: "Check"
                halign: "center"
                on_press: gamescreen.check_grid()

            # Settings button
            Button:
                size_hint_x: 0.2
                text: "Settings"
                halign: "center"
                on_press: app.open_settings()

            BoxLayout:
                size_hint_x: 0.2

                Button:
                    id: menu_button
                    text: "Menu"
                    on_press: app.screens.current = "menu"
                    size_hint_y: 1

        # horizontal container inside the vertical container
        BoxLayout:
            id: grid_container
            orientation: "horizontal"
            size_hint_y: 1

            # Padding (left)
            Padding

            SudokuGrid:
                id: grid
                pos: grid_container.pos
                size_hint: (None, None)
                width: min(grid_container.size)
                height: min(grid_container.size)

            # Padding (right)
            Padding


        # Slider:
            # min: -1
            # max: 0
            # value: 0
            # step: 1
            # size_hint: (1, 0.2)

        NumberInput:
            size_hint_y: None
            height: "50sp"
            grid: grid
